{
    "name": "fleximize/laravel-dotdigital-mail-driver",
    "version": "1.0.0",
    "description": "A Laravel mail driver for Dotdigital.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Fleximize\\LaravelDotdigitalMailDriver\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fleximize\\LaravelDotdigitalMailDriver\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "Sam Harvey",
            "email": "sam.harvey@fleximize.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "10.*",
        "illuminate/http": "10.*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fleximize\\LaravelDotdigitalMailDriver\\LaravelDotdigitalMailDriverServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "laravel/pint": "^1.16",
        "orchestra/testbench": "^8.23",
        "phpunit/phpunit": "^9.6 || ^10.0"
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/pint",
            "@php vendor/bin/phpstan analyse"
        ]
    }
}
